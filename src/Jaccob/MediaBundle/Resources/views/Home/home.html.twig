{% extends 'JaccobMediaBundle:Home:layout.html.twig' %}

{% block actions %}
  <a href="{{ path('jaccob_media.album.create_from') }}" class="btn btn-primary">
    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    New album
  </a>
{% endblock %}

{% block main %}
  <div id="albums" class="centered">
    <h1>Albums</h1>
    {% for album in albums %}
      {#
      <?php if ($album->isShared() && $album->getSharePassword()): ?>
      <div class="album shared password">
      <?php elseif ($album->isShared()): ?>
      <div class="album shared">
      <?php else: ?>
      <div class="album">
      <?php endif; ?>
      #}
      <div class="album">
        <a href="{{ path('jaccob_media.album.list', {albumId: album.id}) }}">
          {{ album.user_name }}
          {% if (previews[album.id] is defined) %}
            <a href="{{ path('jaccob_media.album.list', {albumId: album.id}) }}">
              {{ media_thumbnail(previews[album.id], 's240') }}
            </a>
          {% endif %}
          {# <?php echo $this->esc($album->getDisplayName(), true); ?> #}
        </a>
      </div>
    {% endfor %}
  </div>
{% endblock %}
