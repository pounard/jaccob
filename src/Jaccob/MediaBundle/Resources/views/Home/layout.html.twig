{% extends '::base.html.twig' %}

{% block body %}
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="btn-group pull-right" role="group" aria-label="...">
          {% block actions %}
            <a href="{{ path('jaccob_media.album.add') }}" class="btn btn-primary">
              <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
              New album
            </a>
          {% endblock %}
        </div>
        {% block title %}Media{% endblock %}
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <hr/>
        {% block main %}{% endblock %}
      </div>
    </div>
  </div>

  {% javascripts '@JaccobMediaBundle/Resources/public/js/*' %}
    <script src="{{ asset_url }}"></script>
  {% endjavascripts %}
{% endblock %}