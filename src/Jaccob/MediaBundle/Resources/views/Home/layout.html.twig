{% extends '::base.html.twig' %}

{% block body %}
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <ul class="pull-right">
          {% block actions %}
            <li>
              <a href="{{ path('jaccob_media.album.add') }}" class="btn btn-primary">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                New album
              </a>
            </li>
          {% endblock %}
        </ul>
        <ol class="breadcrumb">
          {% block breadcrumb %}
            <li class="active">Media</li>
          {% endblock %}
        </ol>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-md-12">
        {% block main %}{% endblock %}
      </div>
    </div>
  </div>

  {% javascripts '@JaccobMediaBundle/Resources/public/js/*' %}
    <script src="{{ asset_url }}"></script>
  {% endjavascripts %}
{% endblock %}