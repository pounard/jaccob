{% extends 'JaccobMediaBundle:Home:layout.html.twig' %}

{% block actions %}
  {% if canEdit %}
    <a href="{{ path('jaccob_media.media.edit', {mediaId: media.id}) }}" class="btn btn-warning">
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      Modify
    </a>
  {% endif %}
{% endblock %}

{% block breadcrumb %}
  <li><a href="{{ path('jaccob_media.home') }}">Media</a></li>
  <li>{{ album.ts_user_date_begin|date('Y') }}</li>
  <li><a href="{{ path('jaccob_media.album.view', {albumId: album.id}) }}">{{ album.displayName }}</a></li>
  <li class="active">{{ media.displayName }}</li>
{% endblock %}

{% block mainwapper %}
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-9 media-view">
        {{ media_full(media) }}
      </div>
      <div class="col-md-3">
        Sidebar
      </div>
    </div>
  </div>
{% endblock %}
