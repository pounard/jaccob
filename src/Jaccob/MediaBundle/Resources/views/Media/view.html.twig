{% extends 'JaccobMediaBundle:Home:layout.html.twig' %}

{% block actions %}
  <a href="{{ path('jaccob_media.album.share', {albumId: album.id}) }}" class="btn btn-success">
    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
    Share
  </a>
  <a href="{{ path('jaccob_media.album.edit', {albumId: album.id}) }}" class="btn btn-warning">
    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    Modify
  </a>
{% endblock %}

{% block breadcrumb %}
  <li><a href="{{ path('jaccob_media.home') }}">Media</a></li>
  <li><a href="{{ path('jaccob_media.album.view', {albumId: album.id}) }}">{{ album.displayName }}</a></li>
  <li class="active">{{ media.displayName }}</li>
{% endblock %}

{% block main %}
  <div class="col-md-9">
    {{ media_thumbnail(media, size, false) }}
  </div>
  <div class="col-md-3">
    Sidebar
  </div>
{% endblock %}
