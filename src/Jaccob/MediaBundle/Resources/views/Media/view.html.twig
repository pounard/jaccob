{% extends 'JaccobMediaBundle:Home:layout.html.twig' %}

{% block actions %}
  {% if canEdit %}
    <a href="{{ path('jaccob_media.media.edit', {mediaId: media.id}) }}" class="btn btn-warning">
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      {{ "Edit"|trans }}
    </a>
  {% endif %}
  <a href="{{ path('jaccob_media.media.view.full', {mediaId: media.id}) }}" class="btn btn-primary">
    <span class="glyphicon glyphicon-fullscreen" aria-hidden="true"></span>
    {{ "Fullscreen"|trans }}
  </a>
{% endblock %}

{% block breadcrumb %}
  <li><a href="{{ path('jaccob_media.home') }}">Media</a></li>
  <li>{{ album.ts_user_date_begin|date('Y') }}</li>
  <li><a href="{{ path('jaccob_media.album.view', {albumId: album.id}) }}">{{ album.displayName }}</a></li>
  <li class="active">{{ media.displayName }}</li>
{% endblock %}

{% block mainwapper %}
  <div class="container">
    <div class="row">
      <div class="col-md-9 media-view">
        {{ media_full(media) }}
      </div>
      <div class="col-md-3">
        <h3>{{ "Information" }}</h3>
        <dl>
          <dt>{{ "Author"|trans }}</dt>
          <dd>{{ owner.username }}</dd>
        </dl>
        <dl>
          <dt>{{ "File name"|trans }}</dt>
          <dd>{{ media.name }}</dd>
        </dl>
        <dl>
          <dt>{{ "File size"|trans }}</dt>
          <dd>{{ media.filesize }}</dd>
        </dl>
        <dl>
          <dt>{{ "Original size"|trans }}</dt>
          <dd>{{ media.width }}x{{ media.height }}</dd>
        </dl>
        {% if device %}
          <dl>
            <dt>{{ "Device"|trans }}</dt>
            <dd>{{ device.name }}</dd>
          </dl>
        {% endif %}
        <h3>{{ "Metadata" }}</h3>
      </div>
    </div>
  </div>
{% endblock %}
