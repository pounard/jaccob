<nav>
  <ul class="pagination">
    {% if previous is defined %}
      <li>
        <a href="{{ previous }}" aria-label="Previous">
          <span aria-hidden="true">&laquo;</span>
        </a>
      </li>
    {% endif  %}
    {% for page in pages %}
      {% if page.active is defined %}
        <li class="active"><a href="{{ page.uri }}">{{ page.page }}</a></li>
      {% else %}
        <li><a href="{{ page.uri }}">{{ page.page }}</a></li>
      {% endif %}
    {% endfor %}
    {% if next is defined %}
      <li>
        <a href="{{ next }}" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
        </a>
      </li>
    {% endif %}
  </ul>
</nav>